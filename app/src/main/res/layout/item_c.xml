<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/item_select">

            <ImageView
                android:id="@+id/cc"
                android:layout_width="66dp"
                android:layout_height="68dp"
                android:layout_marginEnd="@dimen/_16sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_car_" />

            <TextView
                android:id="@+id/NameUserI"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text=" محمد محمد "
                app:layout_constraintEnd_toStartOf="@+id/cc"
                app:layout_constraintTop_toTopOf="@+id/cc" />

            <TextView
                android:id="@+id/PointOfStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="نقطة الانطلاق :"
                app:layout_constraintEnd_toEndOf="@+id/NameUserI"
                app:layout_constraintTop_toBottomOf="@+id/NameUserI" />

            <TextView
                android:id="@+id/PointStartC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:text="رام الله"
                app:layout_constraintEnd_toStartOf="@+id/PointOfStart"
                app:layout_constraintTop_toTopOf="@+id/PointOfStart" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:text="رقم الموبايل"
                app:layout_constraintEnd_toEndOf="@+id/PointOfStart"
                app:layout_constraintTop_toBottomOf="@+id/PointOfStart" />

            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="9dp"
                android:text="0597777777"
                app:layout_constraintBottom_toBottomOf="@+id/text"
                app:layout_constraintEnd_toStartOf="@+id/text"
                app:layout_constraintTop_toTopOf="@+id/text" />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>