<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_16sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp"
            android:background="@drawable/item_select">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="66dp"
                android:layout_height="68dp"
                android:layout_marginEnd="@dimen/_16sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_car_" />

            <TextView
                android:id="@+id/NameDriver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="السائق محمد محمد "
                app:layout_constraintEnd_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />

            <TextView
                android:id="@+id/PointOfStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="نقطة الانطلاق"
                app:layout_constraintEnd_toEndOf="@+id/NameDriver"
                app:layout_constraintTop_toBottomOf="@+id/NameDriver" />

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="إلى"
                app:layout_constraintEnd_toStartOf="@+id/PointOfStart"
                app:layout_constraintTop_toTopOf="@+id/PointOfStart" />

            <TextView
                android:id="@+id/numberPe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:drawableRight="@drawable/ic_group_black_24dp"
                android:gravity="center"
                android:text=" الاشخاص"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintEnd_toEndOf="@+id/PointOfStart"
                app:layout_constraintTop_toBottomOf="@+id/PointOfStart" />

            <TextView
                android:id="@+id/Time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:drawableRight="@drawable/ic_access_time_black_24dp"
                android:gravity="center"
                android:text="TextView"
                app:layout_constraintEnd_toStartOf="@+id/NumberOfPe"
                app:layout_constraintTop_toTopOf="@+id/numberPe" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="73dp"
                android:layout_height="48dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_check_circle_black_24dp" />

            <TextView
                android:id="@+id/NumberOfPe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="3"
                app:layout_constraintBottom_toBottomOf="@+id/numberPe"
                app:layout_constraintEnd_toStartOf="@+id/numberPe"
                app:layout_constraintTop_toTopOf="@+id/numberPe"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/PointOfEnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="نقطة الوصول"
                app:layout_constraintBottom_toBottomOf="@+id/text"
                app:layout_constraintEnd_toStartOf="@+id/text"
                app:layout_constraintTop_toTopOf="@+id/text" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>